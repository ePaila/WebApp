@using ePaila.ViewModel;

@model LeftPanelViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/Favicon.png")" />
    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" />
    

    <script src="@Url.Content("~/Content/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/js/skel.min.js")"></script>
    <script src="@Url.Content("~/Content/js/util.js")"></script>
    <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
    <script src="@Url.Content("~/Content/js/main.js")"></script>

    
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>    
    <script type="text/javascript">
        $(window).load(function () {
           $(".goog-te-gadget-simple").attr('class', 'jpt');

            //$('#:0.targetLanguage').removeClass('goog-te-gadget-simple');//.addClass('jpt');   
            //$('.goog-te-gadget-simple').css({ "background-color": "red" });
        });
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE }, 'google_translate_element');
        }
    </script>
    <style type="text/css">
        jpt {
             /*background-color: #fff;*/ 
            /* border-left: 1px solid #d5d5d5; */
            /* border-top: 1px solid #9b9b9b; */
            /* border-bottom: 1px solid #e8e8e8; */
            /* border-right: 1px solid #d5d5d5; */
            /*font-size: 10pt;*/
            display: inline-block;
            padding-top: 1px;
            padding-bottom: 2px;
            cursor: pointer;
            zoom: 1;
        }
    </style>
</head>
<body>
    <section>
        <!-- Content -->
        <div id="content">
            <div class="inner">

                @RenderBody()

            </div>
        </div>

        <!-- Sidebar -->
        <section id="sidebar">
            <!-- Logo -->
            <h1 id="logo"><a href="@Url.Action("Index", "Home")">ePaila</a></h1>

            <section>
                <div id="google_translate_element"></div>                
            </section>
            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li class="@(ViewBag.Title=="ePaila : Home"? "current":"")"><a href="@Url.Action("Index", "Home")">Latest Post</a></li>
                    <li class="@(ViewBag.Title=="ePaila : Archives"? "current":"")"><a href="@Url.Action("Index", "Archives")">Archives</a></li>
                    <li class="@(ViewBag.Title=="ePaila : About Me"? "current":"")"><a href="@Url.Action("Index", "AboutMe")">About Me</a></li>
                    <li class="@(ViewBag.Title=="ePaila : Contact Me"? "current":"")"><a href="@Url.Action("Index", "ContactMe")">Contact Me</a></li>
                </ul>
            </nav>

            <!-- Search -->
            <section class="box search">
                <form method="post" action="#">
                    <input type="text" class="text" name="search" placeholder="Search" />
                </form>
            </section>

            <!-- Text -->
            <section class="box text-style1">
                <div class="inner">
                    <p>
                        <a href="#">What I learn From Nature</a> |
                        <a href="#">Blue Moon </a> |
                        <a href="#">Educate Child</a> |
                        <a href="#">App Architect </a> |
                        <a href="http://www.news.epaila.com" target="_blank">www.news.epaila.com</a>
                    </p>
                </div>
            </section>

            <!-- Recent Posts -->
            <section class="box recent-posts">
                <header>
                    <h2>Recent Posts</h2>
                </header>
                <ul>
                    @foreach (var item in Model.RecentPosts)
                    {
                        <li><a href="@Url.Action("Details", "Home",new { articleid= item.ArticleID})">@(item.Title.Length > 26 ? item.Title.Substring(0, 26) : item.Title)...</a></li>
                    }
                </ul>
            </section>

            <!-- Recent Comments -->
            <section class="box recent-comments">
                <header>
                    <h2>Recent Comments</h2>
                </header>
                <ul>
                    <li>case on <a href="#">Lorem ipsum dolor</a></li>
                    <li>molly on <a href="#">Sed dolore magna</a></li>
                    <li>case on <a href="#">Sed dolore magna</a></li>
                </ul>
            </section>

            <!-- Calendar -->
            <section class="box calendar">
                <div class="inner">
                    @{Html.RenderPartial("_Calendar", Model.Calendar);}
                </div>
            </section>

            <!-- Copyright -->
            <ul id="copyright">
                <li>&copy; ePaila</li>
                <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
            </ul>

        </section>
    </section>
</body>
</html>
